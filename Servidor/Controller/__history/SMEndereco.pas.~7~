unit SMEndereco;

interface

uses
  System.SysUtils, System.Classes, System.Json,
  DataSnap.DSProviderDataModuleAdapter, Datasnap.DSServer, Datasnap.DSAuth,

  Data.DBXPlatform, Web.HTTPApp, Datasnap.DSHTTPWebBroker,

  FireDAC.Stan.Option, Data.DB;

type
  TSMEndereco = class(TDSServerModule)
  private
    { Private declarations }
  public
    { Public declarations }

    function Enderecos: TJSONArray;                        //GET
    function UpdateEnderecos: TJSONArray;                  //POST
    function AcceptEnderecos(aValue: Integer): TJSONArray; //PUT
    function CancelEnderecos(aValue: Int64): TJSONArray;   //DELETE
  end;

implementation


{$R *.dfm}

uses
  uJsonDataSetHelper, WebModuleUnit1, DAO.DMConexao, DAO.Enderecos;

{ TSMEndereco }

function TSMEndereco.Enderecos: TJSONArray;
var
  metaData:  TDSInvocationMetadata;
  enderecos: TDAOEnderecos;

  idEndereco:  Int64;
  idPessoa:    Int64;
  cep:         string;
  idPaginacao: Int64;
begin
{GET NO HTTP}
  Result:=       nil;
  enderecos:=    nil;

  idEndereco:=  -1;
  idPessoa:=    -1;
  cep:=         '';
  idPaginacao:= -1;

  try
    try
      metaData:= GetInvocationMetadata;

      if metaData.QueryParams.IndexOfName('idEndereco') > -1 then
        idEndereco:= StrToInt64(metaData.QueryParams.Values['idEndereco']);

      if metaData.QueryParams.IndexOfName('idPessoa') > -1 then
        idPessoa:= StrToInt64(metaData.QueryParams.Values['idPessoa']);

      if metaData.QueryParams.IndexOfName('cep') > -1 then
        cep:= StrToInt64(metaData.QueryParams.Values['cep']);

      if metaData.QueryParams.IndexOfName('idPaginacao') > -1 then
        idPaginacao:= StrToInt64(metaData.QueryParams.Values['idPaginacao']);

      enderecos:= TDAOEnderecos.Create(DMConexao.FDPostgre);

      Result:= enderecos.Get(idPaginacao);

      //Remove partes indesejadas do datasnap
      GetInvocationMetadata().ResponseCode:=    200;
      GetInvocationMetadata().ResponseContent:= Result.ToString;
    except on E: Exception do
      begin
        GetInvocationMetadata().ResponseCode:= 500;
        GetInvocationMetadata().ResponseMessage:= 'Um erro inesperado ocorreu.';
      end;
    end;
  finally
    if enderecos <> nil then
      FreeAndNil(enderecos);
  end;
end;

function TSMEndereco.UpdateEnderecos: TJSONArray;
var
  lModulo:       TWebModule;
  lJARequisicao: TJSONArray;

  endereco:      TDAOEnderecos;
  qInseridos:    Integer;
begin
{POST NO HTTP}
  Result:=   nil;
  endereco:= nil;

  try
    try
      lModulo:= GetDataSnapWebModule;

      if lModulo.Request.content.IsEmpty then
      begin
        GetInvocationMetadata().ResponseCode:= 204;
        GetInvocationMetadata().ResponseMessage:= 'Não existe registros para inserir.';
        Abort;
      end;

      lJARequisicao:= TJSONObject.ParseJSONValue(TEncoding.ASCII.GetBytes(lModulo.Request.Content), 0) as TJSONArray;

      if lJARequisicao.Count < 1 then
      begin
        GetInvocationMetadata().ResponseCode:= 202;
        GetInvocationMetadata().ResponseMessage:= 'Não existe registros para inserir.';
        Exit;
      end;

      endereco:= TDAOEnderecos.Create(DMConexao.FDPostgre);

      qInseridos:= endereco.Insert(lJARequisicao);

      Result:= TJSONArray.Create('incluidos', qInseridos.ToString);

      //Remove partes indesejadas do datasnap
      GetInvocationMetadata().ResponseCode:=    200;
      GetInvocationMetadata().ResponseContent:= Result.ToString;
    except
      on E: Exception do
      begin
        GetInvocationMetadata().ResponseCode:= 500;
        GetInvocationMetadata().ResponseMessage:= 'Um erro inesperado ocorreu.';
      end;
    end;
  finally
    if endereco <> nil then
      FreeAndNil(endereco);
  end;
end;

function TSMEndereco.AcceptEnderecos(aValue: Integer): TJSONArray;
var
  lModulo:       TWebModule;
  lJARequisicao: TJSONArray;

  endereco: TDAOEnderecos;
begin
{PUT NO HTTP}
  Result:=  nil;
  endereco:= nil;

  try
    try
      lModulo:= GetDataSnapWebModule;

      if lModulo.Request.content.IsEmpty then
      begin
        GetInvocationMetadata().ResponseCode:= 204;
        GetInvocationMetadata().ResponseMessage:= 'Sem registro para alterar.';
        Exit;
      end;

      lJARequisicao:= TJSONObject.ParseJSONValue(TEncoding.ASCII.GetBytes(lModulo.Request.Content), 0) as TJSONArray;

      if lJARequisicao.Count <> 1 then
      begin
        GetInvocationMetadata().ResponseCode:= 202;
        GetInvocationMetadata().ResponseMessage:= 'Dese ser informado exatamente um registro para alteração.';
        Exit;
      end;

      endereco:= TDAOEnderecos.Create(DMConexao.FDPostgre);

      endereco.Update(aValue, lJARequisicao);

      Result:= TJSONArray.Create('message', 'Registro alterado.');

      //Remove partes indesejadas do datasnap
      GetInvocationMetadata().ResponseCode:=    200;
      GetInvocationMetadata().ResponseContent:= Result.ToString;
    except
      on E: Exception do
      begin
        GetInvocationMetadata().ResponseCode:= 500;
        GetInvocationMetadata().ResponseMessage:= 'Um erro inesperado ocorreu.';
      end;
    end;
  finally
    if endereco <> nil then
      FreeAndNil(endereco);
  end;
end;

function TSMEndereco.CancelEnderecos(aValue: Int64): TJSONArray;
var
  endereco: TDAOEnderecos;
begin
{DELETE NO HTTP}
  Result:=  nil;
  endereco:= nil;

  try
    try
      if aValue < 1 then
      begin
        GetInvocationMetadata().ResponseCode:= 202;
        GetInvocationMetadata().ResponseMessage:= 'A id do registro não foi informada.';
        Exit;
      end;

      endereco:= TDAOEnderecos.Create(DMConexao.FDPostgre);

      endereco.Delete(aValue);

      Result:= TJSONArray.Create('message', 'Registro apagado.');

      //Remove partes indesejadas do datasnap
      GetInvocationMetadata().ResponseCode:=    200;
      GetInvocationMetadata().ResponseContent:= Result.ToString;
    except
      on E: Exception do
      begin
        GetInvocationMetadata().ResponseCode:= 500;
        GetInvocationMetadata().ResponseMessage:= 'Um erro inesperado ocorreu.';
      end;
    end;
  finally
    if endereco <> nil then
      FreeAndNil(endereco);
  end;
end;

end.
